# Development Environment Configuration

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (Local PostgreSQL + TimescaleDB)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supplysync_dev

# Redis (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRATION=7d

# RabbitMQ (Optional for development)
RABBITMQ_URL=amqp://localhost:5672

# ML Service
ML_SERVICE_URL=http://localhost:8000

# ERP Webhooks (Development Secrets)
SAP_WEBHOOK_SECRET=dev-sap-secret
DYNAMICS_WEBHOOK_SECRET=dev-dynamics-secret
NETSUITE_WEBHOOK_SECRET=dev-netsuite-secret
ODOO_WEBHOOK_SECRET=dev-odoo-secret

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_ANOMALY_DETECTION=true
ENABLE_DEMAND_FORECASTING=true
ENABLE_REAL_TIME_SYNC=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
